/* pages/future/future.wxss */
/* 背景图片 */
.bg {
  width: 100%;
  height:1100rpx;
}
/* 容器 */
.container {
  position: absolute;/*绝对布局*/
  top: 50rpx;
  width: 100%;
  padding: 0;/*内边距*/
  margin: 0;/*外边距*/
  height: 100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;/*主轴以起点对齐*/
}
/* 折线图容器 */
.forecast_canvas{
  width: 750rpx;
  height: 272rpx;
  margin-top: 40rpx;
}
/* 图标 */
.icon{
   width: 60rpx;
  height: 60rpx;
}
/* 顶部城市布局 */
.top_info{
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 顶部城市名 */
.city{
  font-size: 35rpx;
  color: white;
  margin-top: 20rpx;
}
/* 顶部future weather文字 */
.title{
  font-size: 50rpx;
  color: white;
  margin-top: 20rpx;
}
/* 分隔线 */
.seperator{
  background: #E0E3DA;
 width: 600rpx;
 height: 5rpx;
 margin-top: 20rpx;
}
.container .future_weather{
  width: 100%;
  display: flex;
  flex-direction: row;/*主轴为横轴，项目左右排列*/
  justify-content: space-around;/*项目在主轴上的对齐方式：项目两侧间隔相等*/
  margin-top:40rpx;
}
.future_weather .future_day{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.future_day .day{
  color: white;
  font-size: 30rpx;
}
.future_day .date{
  color: white;
  font-size: 25rpx;
}
.future_day .wtype{
  color: white;
  font-size:30rpx;
}
.future_day .weather_icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}
/* week */
.week{
  position: relative;
  padding: 40rpx 0;
  min-height: 200rpx;
}
.week-weather{
  display: flex;
  flex-direction: row;
  text-align: center;
}
.item{
  flex:1;
}
.wind {
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  width: 80rpx;
  margin: 0 auto 12rpx;
  overflow: hidden;
}
.date {
  margin: 10rpx 0 30rpx;
  font-size: 24rpx;
}
.wt{
  margin-bottom: 30rpx;
}