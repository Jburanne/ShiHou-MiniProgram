/**index.wxss**/
/* 背景图片 */
.bg {
  width: 100%;
  height:1100rpx;
}
/* icon */
.icon{
  width: 100rpx;
  height: 100rpx;
}
/* 湿度图标 */
.humidityicon{
  width: 50rpx;
  height: 50rpx;
}
/* 风力图标 */
.windicon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
/* 容器 */
.container {
  position: absolute;/*绝对布局*/
  left: 40rpx;
  top: 50rpx;
  width: 100%;
  padding: 0;/*内边距*/
  margin: 0;/*外边距*/
  height: 100%;
  display:block;
}
.row_container{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.column_container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 距离上一行的距离 */
.m_t_1{
  margin-top: 40rpx;
}
.m_t_2{
  margin-top: 20rpx;
}
.m_l{
  margin-left: 40rpx;
}
.m_l_2{
  margin-left: 10rpx;
}
/* 字体颜色 */
.w{
  color: white;
}
/* 字体粗细 */
.b{
  font-weight: bold;
}
/* 字体大小 */
.f25{
  font-size: 25rpx;
}
.f30{
  font-size: 30rpx;
}
.f100{
  font-size: 100rpx;
}

/* 城市名 */
.city{
  padding-left: 10rpx;
  font-family: "微软雅黑";
}

.quality_border{
  border: white;
  border-style: solid;
  border-width: 1px;
  border-radius: 5px;
  padding-left: 10px;
  padding-right: 10px;
  width: 100rpx;
}

