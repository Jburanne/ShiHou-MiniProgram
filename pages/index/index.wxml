<view class="container">
  <view class="row_container">
  <image src="{{iconsrc}}" class="icon"></image>
  <view class="w city">{{city}}</view>
  <image class="icon1" src="../../images/location_1.png" bindtap="chooseLocation"></image>
  </view>
  <view class="row_container m_t_1">
    <view class="f100 b w">{{tmp}}</view>
    <view class="column_container m_l_2">
      <view class="f30 w">{{type}}</view>
      <image src="../../images/weather_duoyun.png" class="icon"></image>
    </view>
  </view>
  <view class="row_container m_t_2">
    <image src="../../images/humidity.png" class="humidityicon"></image>
    <view class="f25 w">{{humidity}}%</view>
    <image src="../../images/wind.png" class="windicon"></image>
    <view class="f25 w">{{wind}}çº§</view>
  </view>
  <view class="row_container m_l m_t_2">
  <view class="column_container quality_border">
    <view class="f30 w">{{quality}}</view>
    <view class="f25 w">{{pm}}</view>
  </view>
  </view>
</view>
