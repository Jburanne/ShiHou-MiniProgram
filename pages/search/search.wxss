/* 热门城市部分 */
.hot {
  background: #fff;
  padding: 30rpx 30rpx 20rpx;
  width: 100%;
}
.hot .title {
  font-size: 32rpx;
}
.hot .cities {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.hot .item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 60rpx;
  background: #f4f6f9;
  border-radius: 8rpx;
  color: #333;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 2.5%;
  margin-right: 2.5%;
}
.hot .item.active {
  background: #40a7e7;
  color: #fff;
}
.hot .item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.bottom {
  font-size: 32rpx;
  color: #333;
  background: #fff;
  width: 100%;
  margin-top:30rpx;
}
.bottom .key {
  background: #f4f6f9;
  height: 60rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.bottom .values .value {
  border-bottom: 1rpx solid #efefef;
  height: 104rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.bottom .values .value:last-child {
  border-bottom: none;
}
