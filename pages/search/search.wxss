.container {
  position: absolute;
  width: 100%;
  display: block;
  padding: 0;
  margin: 0;
  top:0rpx;
}
/* 搜索框背景图片 */
.search_img{
  width: 100%;
  height: 350rpx;
}
/* 搜索部分的容器 */
.wrapper{
  font-size: 0;
  padding-top: 80rpx;
  margin-left:80rpx;
  position: relative;
  height: 250rpx;
  box-sizing: border-box;
  width: 80%;
  align-items: center;
}
.wrapper .search {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.inner {
  background: #478FA7;
  opacity: 0.6;
  font-size: 30rpx;
  padding: 16rpx 0rpx 16rpx 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  flex: 1;
  display: flex;
  align-items: center;
  margin-top: 80rpx;
  margin-left: 80rpx;
  margin-right: 100rpx;
}
.inner input {
  background: #478FA7;
  font-size: 30rpx;
  color: #fff;
  height: 50rpx;
  /* 覆盖默认样式 min-height */
  min-height: 40rpx;
  line-height: 40rpx;
  width:100%;
  box-sizing: border-box;
}
.icon {
  width: 50rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
